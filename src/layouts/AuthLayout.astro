---
import { siteConfig } from "@/lib/site";
import "@/styles/globals.css";

interface Props {
  title?: string;
}

const { title = "EMBARQUES - Autenticación" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="font-sans antialiased" style="--font-open-sans: 'Open Sans', system-ui, sans-serif">
    <div class="min-h-screen flex flex-col items-center justify-center bg-brand-blue p-4">
      <a
        href="/inicio"
        class="absolute top-6 left-1/2 -translate-x-1/2 flex items-center gap-2 text-white/90 hover:text-white transition-colors"
        aria-label="Volver al inicio"
      >
        <img
          src={siteConfig.logo}
          alt={siteConfig.companyTitle}
          width={120}
          height={32}
          class="h-8 w-auto object-contain"
          loading="eager"
          decoding="async"
        />
      </a>
      <main class="w-full max-w-md mt-20" role="main">
        <slot />
      </main>
      <p class="mt-8 text-xs text-white/60 text-center">
        © {new Date().getFullYear()} {siteConfig.companyTitle}
      </p>
    </div>
  </body>
</html>
