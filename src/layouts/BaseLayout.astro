---
import { AppShell } from "@/components/layout";
import "@/styles/globals.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "EMBARQUES - Logística y Comercio Exterior", description = "Logística y Comercio Exterior" } = Astro.props;
const pathname = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <script is:inline>
      try {
        var s = localStorage.getItem("embarques-sidebar-open");
        window.__SIDEBAR_OPEN__ = s !== null ? s === "true" : true;
      } catch (e) {
        window.__SIDEBAR_OPEN__ = true;
      }
    </script>
    <script
      type="module"
      src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"
    ></script>
  </head>
  <body class="h-screen overflow-hidden font-sans antialiased" style="--font-open-sans: 'Open Sans', system-ui, sans-serif">
    <AppShell client:load pathname={pathname}>
      <slot />
    </AppShell>
  </body>
</html>
