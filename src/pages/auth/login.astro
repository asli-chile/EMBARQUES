---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { AuthFormWrapper } from "@/components/auth/AuthFormWrapper";
import { LoginForm } from "@/components/auth/LoginForm";

const registered = Astro.url.searchParams.get("registered") === "true";
---

<BaseLayout title="Iniciar sesión - EMBARQUES" description="Iniciar sesión en EMBARQUES">
  <AuthFormWrapper client:load>
    <LoginForm client:load registered={registered} />
  </AuthFormWrapper>
</BaseLayout>
